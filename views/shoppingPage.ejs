<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laptop Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/shoppingPage.css">
    <link rel="stylesheet" href="css/header.css">


</head>

<body>


    <%- include("./partials/user/header.ejs") %>

        <div class="main">
            <aside class="filter">
                <h2>Filter By</h2>
                <div class="filter-category">
                    <h3>Brand</h3>
                    <label><input type="checkbox" checked> Apple</label>
                    <label><input type="checkbox"> HP</label>
                    <label><input type="checkbox"> Dell</label>
                    <label><input type="checkbox"> Asus</label>
                    <label><input type="checkbox"> Lenovo</label>
                </div>
                <div class="filter-category">
                    <h3>RAM Capacity</h3>
                    <label><input type="checkbox"> 8GB</label>
                    <label><input type="checkbox"> 16GB</label>
                    <label><input type="checkbox"> 32GB</label>
                </div>
                <div class="filter-category">
                    <h3>SSD Capacity</h3>
                    <label><input type="checkbox"> 256GB</label>
                    <label><input type="checkbox"> 512GB</label>
                    <label><input type="checkbox"> 1TB</label>
                </div>
                <div class="filter-category">
                    <h3>Graphics Processor</h3>
                    <label><input type="checkbox"> Apple GPU</label>
                    <label><input type="checkbox"> Intel Integrated</label>
                    <label><input type="checkbox"> AMD</label>
                    <label><input type="checkbox"> NVIDIA GeForce RTX</label>
                </div>
                <button>APPLY</button>
            </aside>
            <main class="products">
                <div class="sort-options">
                    <label for="sort">Sort By:</label>
                    <select id="sort">
                        <option selected>Popularity</option>
                        <option>Newest First</option>
                        <option>Price Low-High</option>
                        <option>Price High-Low</option>
                    </select>
                </div>

                <div class="product-grid">
                    <% products.forEach(product=>{ %>
                        <div class="product-card">
                            <img src="https://placehold.co/200x150" alt="Laptop">
                            <div class="rating">★★★★☆</div>
                            <h3>
                                <%= product.name %>
                            </h3>
                            <ul>
                                <li>
                                    <%= product.CPU %>
                                </li>
                                <li>16GB unified Memory</li>
                                <li>1TB SSD Storage</li>
                                <li>
                                    <%= product.screen %>
                                </li>
                            </ul>
                            <p class="price">₹<%= product.salePrice %>
                            </p>
                        </div>
                        <% }) %>
                </div>

            </main>
        </div>
</body>

</html>