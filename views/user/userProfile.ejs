<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Template</title>
    <link rel="stylesheet" href="/css/profileSidebar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {

            background-color: #f5f5f5;
        }


        .main-content {
            max-height: 90vh;
            flex-grow: 1;
            padding: 40px;
        }

        .welcome {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .profile-info {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .profile-info div {
            margin-bottom: 15px;
        }

        .profile-info label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .profile-info input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .profile-info input:disabled {
            background-color: #eee;
        }

        .edit-btn {
            background-color: #000;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        .edit-btn:hover {
            background-color: #333;
        }
    </style>
</head>

<body>

    <%- include("../partials/user/header.ejs") %>
        <div class="main-body">
            
            <%- include("../partials/user/profileSidebar.ejs") %>


            <div class="main-content">
                <div class="welcome">Welcome <%= user.fullname%> !</div>
                <div class="profile-info">
                    <div>
                        <label>Full name</label>
                        <input type="text" id="full-name" name="fullname" value="<%= user.fullname || username %>"
                            disabled>
                    </div>
                    <div>
                        <label>Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" disabled>
                    </div>
                    <div>
                        <label>Phone</label>
                        <input type="tel" id="phone" name="mobile" value="<%= user.mobile%>" disabled>
                    </div>
                    <button class="edit-btn" onclick="toggleEdit()">EDIT</button>
                </div>
            </div>
            <form action="" method="POST" id="profile-form">
                <input type="hidden" name="fullname" id="form-name">
                <input type="hidden" name="email" id="form-email">
                <input type="hidden" name="mobile" id="form-mobile">
            </form>
        </div>

        <script>
            const userId = "<%= user._id %>"
            function toggleEdit() {
                const fullName = document.getElementById('full-name');
                const email = document.getElementById('email');
                const phone = document.getElementById('phone');
                const editBtn = document.querySelector('.edit-btn');
                const form = document.getElementById('profile-form')

                if (editBtn.textContent === 'EDIT') {
                    fullName.disabled = false;
                    email.disabled = false;
                    phone.disabled = false;
                    editBtn.textContent = 'SAVE';
                    
                } else {
                    fullName.disabled = true;
                    email.disabled = true;
                    phone.disabled = true;
                    editBtn.textContent = 'EDIT';
                    
                    document.getElementById('form-name').value = fullName.value
                    document.getElementById('form-email').value = email.value
                    document.getElementById('form-mobile').value = phone.value
                    
                    form.action = `/profile/edit-profile/${userId}`
                    
                    form.submit()
                }
            }
        </script>
</body>

</html>