<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Forgot Password</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/verifyEmail.css">
</head>

<body>
  <div class="container">
    <div class="lock-icon">
      <i class="fas fa-lock"></i>
    </div>
    
    <h1>Forgot Password?</h1>
    <p class="subtitle">No worries! Enter your email address and we'll send you a reset link.</p>

    <form action="/forgot-password" method="POST" id="forgotForm">
      <div class="form-group">
        <label for="email">Email Address</label>
        <div class="input-container">
          <input type="email" name="email" id="email" placeholder="Enter your email address" required />
          <i class="fas fa-envelope input-icon"></i>
        </div>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-message">
          <i class="fas fa-exclamation-triangle"></i>
          <%= error %>
        </div>
      <% } %>

      <button type="submit" class="btn" id="submitBtn">
        <i class="fas fa-paper-plane"></i>
        Send Reset Link
      </button>
    </form>

    <div class="back-link">
      <a href="/login">
        <i class="fas fa-arrow-left"></i>
        Back to Login
      </a>
    </div>
  </div>

  <script>
    document.getElementById('forgotForm').addEventListener('submit', function(e) {
      const submitBtn = document.getElementById('submitBtn');
      submitBtn.classList.add('loading');
      submitBtn.innerHTML = 'Sending...';
    });

    const emailInput = document.getElementById('email');
    const inputIcon = document.querySelector('.input-icon');

    emailInput.addEventListener('input', function() {
      if (this.value.length > 0) {
        inputIcon.style.color = '#667eea';
      } else {
        inputIcon.style.color = '#a0aec0';
      }
    });

    emailInput.addEventListener('focus', function() {
      this.style.borderColor = '#667eea';
      inputIcon.style.color = '#667eea';
    });
  </script>
</body>

</html>