<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password</title>
  <link rel="stylesheet" href="/css/header.css">
  <link rel="stylesheet" href="/css/profileSidebar.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/universal-floating-elements.css">
  <link rel="stylesheet" href="/css/userChangePassword.css">
</head>

<body>
  <%- include("../partials/user/header.ejs") %>
  <div class="main-body">
    <%- include("../partials/user/profileSidebar.ejs") %>

    <div class="main-content">
      <div class="password-form-section">
        <div class="breadcrumb">
        <a href="/profile">Profile</a>
        <i class="fas fa-chevron-right"></i>
        <span>Change Password</span>
      </div>
        <h2 class="page-title"><i class="fas fa-key" style="color: #6366f1;"></i>
          <% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>
            Set Password
          <% } else { %>
            Change Password
          <% } %>
        </h2>
        <p class="user-email"><%= user.email %></p>

        <% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>
          <div class="info-message" style="background-color: #e3f2fd; border: 1px solid #2196f3; color: #1976d2; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
            <i class="fas fa-info-circle"></i>
            Your account was created with Google. Set a password to enable email/password login as an alternative to Google Sign-in.
          </div>
        <% } %>

        <form action="/profile/change-password" method="POST">
          <% if (typeof isGoogleUser === 'undefined' || !isGoogleUser) { %>
          <div class="form-group">
            <label for="currentPassword">Enter Current Password</label>
            <input 
              type="password" 
              id="currentPassword" 
              name="currentPassword" 
              placeholder="Enter your current password" />
            
              <p class="error-field"><%= errors? errors.currentPassword : '' %></p>
            
          </div>
          <% } %>

          <div class="form-group">
            <label for="newPassword">
              <% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>
                Enter Password
              <% } else { %>
                Enter New Password
              <% } %>
            </label>
            <input 
              type="password" 
              id="newPassword" 
              name="newPassword" 
              placeholder="<% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>Enter your password<% } else { %>Enter your new password<% } %>" />
           
              <p class="error-field"> <%= errors ? errors.newPassword : '' %></p>
           
          </div>

          <div class="form-group">
            <label for="confirmPassword">
              <% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>
                Confirm Password
              <% } else { %>
                Confirm New Password
              <% } %>
            </label>
            <input 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              placeholder="<% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>Confirm your password<% } else { %>Confirm your new password<% } %>" />
            
              <p class="error-field"> <%= errors ? errors.confirmPassword : '' %></p>
            
          </div>

          <button type="submit" class="update-btn">
            <i class="fas fa-lock"></i> 
            <% if (typeof isGoogleUser !== 'undefined' && isGoogleUser) { %>
              Set Password
            <% } else { %>
              Update Password
            <% } %>
          </button>

        </form>
      </div>
      
    </div>
  </div>
  <%- include('../partials/user/footer.ejs') %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form');
      const newPassword = document.getElementById('newPassword');
      const confirmPassword = document.getElementById('confirmPassword');
      
      form.addEventListener('submit', function(event) {
        if(newPassword.value !== confirmPassword.value) {
          event.preventDefault();
          alert('New password and confirm password do not match');
        }
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>

</html>