<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LapZone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/landingPage.css">
</head>
<body>
    <%- include("../partials/user/header.ejs") %>

    <section class="hero position-relative">
        <img src="/banners/beatsnoop.com-v7784.jpg" alt="Hero Banner" class="w-100 img-fluid">   
    </section>

    <section class="section container py-5">
        <h2 class="text-center mb-5">New Arrivals</h2>
        <% if (products && products.length) { %>
            <div class="product-list row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 justify-content-center">
                <% products.forEach(product => { 
                    const mainImage = product.images.find(img => img.isMain); 
                    const variant = product.variants?.[0]; 
                %>
                    <div class="col">
                        <div class="product card h-100 border-0 shadow-sm">
                            <img 
                                src="<%= mainImage?.url || '/images/default.jpg' %>" 
                                alt="<%= product.name %> laptop" 
                                class="card-img-top rounded"
                            >
                            <div class="card-body text-center">
                                <h5 class="card-title fw-semibold"><%= product.name %></h5>
                                <p class="card-text text-muted">
                                    <%= product.CPU %> | <%= variant?.RAM || 'N/A' %> | <%= variant?.Storage || 'N/A' %>
                                </p>
                                <p class="card-text fw-bold text-primary">₹<%= product.salePrice.toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="text-center mt-5">
                <a href="/shop" class="btn btn-primary btn-lg">View All Products</a>
            </div>
        <% } else { %>
            <p class="text-center text-muted">No new arrivals available.</p>
        <% } %>
    </section>

    <section class="banner-2 position-relative">
        <img src="/banners/steptodown.com667448.jpg" alt="Gaming Banner" class="w-100 img-fluid">
    </section>

    <section class="section container py-5">
        <h2 class="text-center mb-5">Fastest Laptops</h2>
        <% if (gamingProducts && gamingProducts.length) { %>
            <div class="product-list row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 justify-content-center">
                <% gamingProducts.forEach(product => { 
                    const mainImage = product.images.find(img => img.isMain); 
                    const variant = product.variants?.[0]; 
                %>
                    <div class="col">
                        <div class="product card h-100 border-0 shadow-sm">
                            <img 
                                src="<%= mainImage?.url || '/images/default.jpg' %>" 
                                alt="<%= product.name %> laptop" 
                                class="card-img-top rounded"
                            >
                            <div class="card-body text-center">
                                <h5 class="card-title fw-semibold"><%= product.name %></h5>
                                <p class="card-text text-muted">
                                    <%= product.CPU %> | <%= variant?.RAM || 'N/A' %> | <%= variant?.Storage || 'N/A' %>
                                </p>
                                <p class="card-text fw-bold text-primary">₹<%= product.salePrice.toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="text-center mt-5">
                <a href="/shop" class="btn btn-primary btn-lg">View All Products</a>
            </div>
        <% } else { %>
            <p class="text-center text-muted">No gaming laptops available.</p>
        <% } %>
    </section>

    <footer class="bg-dark text-white py-5">
        <div class="container text-center">
            <p class="mb-3">© 2025 LapZone. All rights reserved.</p>
            <div class="footer-links">
                <a href="/quality" class="text-white text-decoration-none mx-2">High Quality</a> |
                <a href="/delivery" class="text-white text-decoration-none mx-2">Free Delivery</a> |
                <a href="/returns" class="text-white text-decoration-none mx-2">Easy Returns</a> |
                <a href="/support" class="text-white text-decoration-none mx-2">24/7 Support</a>
            </div>
        </div>
    </footer>

    <script src="/js/header.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>